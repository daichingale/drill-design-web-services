generator client {
  provider = "prisma-client"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id            String    @id @default(uuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  image         String?
  password      String? // パスワードハッシュ（Credentials認証用）
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  accounts           Account[]
  sessions           Session[]
  drills             Drill[]
  drillCollaborators DrillCollaborator[]
  changeHistory      ChangeHistory[]
  comments           Comment[]
  drillBranches      DrillBranch[]

  @@map("users")
}

model Account {
  id                String  @id @default(uuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(uuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

model Drill {
  id        String   @id @default(uuid())
  userId    String? // ユーザーID（データ分離、一時的にnullable）
  title     String   @default("")
  dataName  String   @default("")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user          User?               @relation(fields: [userId], references: [id], onDelete: Cascade)
  sets          Set[]
  members       Member[]
  collaborators DrillCollaborator[]
  changeHistory ChangeHistory[]
  comments      Comment[]
  branches      DrillBranch[]

  @@index([userId])
  @@map("drills")
}

model Set {
  id               String   @id @default(uuid())
  drillId          String
  name             String   @default("")
  startCount       Int      @default(0)
  note             String   @default("")
  instructions     String   @default("")
  nextMove         String   @default("")
  positions        Json // Record<string, {x: number, y: number}>
  positionsByCount Json? // Record<number, Record<string, {x: number, y: number}>>
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  drill Drill @relation(fields: [drillId], references: [id], onDelete: Cascade)

  @@index([drillId])
  @@map("sets")
}

model Member {
  id        String   @id @default(uuid())
  drillId   String
  memberId  String // UI上のID（M1, M2など）
  name      String   @default("")
  part      String   @default("")
  color     String   @default("#888888")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  drill Drill @relation(fields: [drillId], references: [id], onDelete: Cascade)

  @@unique([drillId, memberId])
  @@index([drillId])
  @@map("members")
}

// ドリルへのアクセス権限管理
model DrillCollaborator {
  id        String   @id @default(uuid())
  drillId   String
  userId    String
  role      String   @default("viewer") // "owner", "editor", "viewer"
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  drill Drill @relation(fields: [drillId], references: [id], onDelete: Cascade)
  user  User  @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([drillId, userId])
  @@index([drillId])
  @@index([userId])
  @@map("drill_collaborators")
}

// 変更履歴の追跡
model ChangeHistory {
  id         String   @id @default(uuid())
  drillId    String
  userId     String
  action     String // "create", "update", "delete", "move", "add_member", etc.
  entityType String // "set", "member", "drill", etc.
  entityId   String?
  changes    Json? // 変更内容の詳細
  createdAt  DateTime @default(now())

  drill Drill @relation(fields: [drillId], references: [id], onDelete: Cascade)
  user  User  @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([drillId])
  @@index([userId])
  @@index([createdAt])
  @@map("change_history")
}

// コメント機能
model Comment {
  id         String    @id @default(uuid())
  drillId    String
  userId     String
  entityType String // "set", "member", "drill", etc.
  entityId   String? // コメント対象のID（nullの場合はドリル全体へのコメント）
  content    String    @db.Text
  x          Float? // フィールド上の位置（オプション）
  y          Float? // フィールド上の位置（オプション）
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt
  deletedAt  DateTime?

  drill Drill @relation(fields: [drillId], references: [id], onDelete: Cascade)
  user  User  @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([drillId])
  @@index([userId])
  @@index([entityType, entityId])
  @@map("comments")
}

// ブランチ管理（Gitライクな機能）
model DrillBranch {
  id           String   @id @default(uuid())
  drillId      String
  name         String
  description  String?
  baseBranchId String? // 親ブランチのID
  isCurrent    Boolean  @default(false) // 現在のブランチ
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  userId       String // 作成者

  drill Drill @relation(fields: [drillId], references: [id], onDelete: Cascade)
  user  User  @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([drillId, name])
  @@index([drillId])
  @@index([userId])
  @@map("drill_branches")
}
